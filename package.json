{
  "name": "backend",
  "version": "1.0.0",
  "description": "backend - conservatory app - manage your students",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --config vitest.config.unit.js",
    "test:unit:watch": "vitest --config vitest.config.unit.js",
    "test:integration": "vitest run --config vitest.config.integration.js",
    "test:integration:watch": "vitest --config vitest.config.integration.js",
    "test:performance": "vitest run --config vitest.config.performance.js",
    "test:cascade": "npm run test:unit && npm run test:integration && npm run test:performance",
    "test:cascade:unit": "vitest run --config vitest.config.unit.js test/unit/cascadeDeletionService.test.js",
    "test:cascade:integration": "vitest run --config vitest.config.integration.js test/integration/cascade-deletion.test.js test/integration/data-integrity.test.js",
    "test:cascade:performance": "vitest run --config vitest.config.performance.js test/performance/cascade-operations.test.js",
    "test:coverage:cascade": "vitest run --coverage test/unit/cascadeDeletionService.test.js test/integration/cascade-deletion.test.js test/integration/data-integrity.test.js",
    "test:phase2": "vitest run --config vitest.config.phase2.js"
  },
  "author": "Yehonatan Yeshayahu",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.758.0",
    "@aws-sdk/lib-storage": "^3.758.0",
    "@sendgrid/mail": "^8.1.5",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.13.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.5",
    "pino": "^10.3.0",
    "socket.io": "^4.8.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.0.8",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.1.3",
    "supertest": "^7.0.0",
    "vitest": "^3.0.8"
  }
}
